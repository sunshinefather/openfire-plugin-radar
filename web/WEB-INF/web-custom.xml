<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <servlet>
        <servlet-name>BroadcastByIQServlet</servlet-name>
        <servlet-class>com.radar.servlet.BroadcastByIQServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BroadcastByMessageServlet</servlet-name>
        <servlet-class>com.radar.servlet.BroadcastByMessageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VersionBoardcastServlet</servlet-name>
        <servlet-class>com.radar.servlet.VersionBoardcastServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PresenceServlet</servlet-name>
        <servlet-class>com.radar.servlet.PresenceServlet</servlet-class>
    </servlet>
    <!-- Servlet mappings  注意URL不能包含 Servlet关键词 -->
    <servlet-mapping>
        <servlet-name>BroadcastByIQServlet</servlet-name>
        <url-pattern>/broadcastbyiq</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BroadcastByMessageServlet</servlet-name>
        <url-pattern>/broadcastbymessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VersionBoardcastServlet</servlet-name>
        <url-pattern>/versionboardcast</url-pattern>
    </servlet-mapping>
	<servlet-mapping>
        <servlet-name>PresenceServlet</servlet-name>
        <url-pattern>/presenceservlet</url-pattern>
    </servlet-mapping>
</web-app>
